@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/admin/assets/extrapages/material-dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="page-header align-items-start min-vh-100" style="background-image: url('https://sneakernews.com/wp-content/uploads/2021/10/adidas-shopping-guide-october-2021-mahomes-banner.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container my-auto">
            <div class="row">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Sign in</h4>
                                <div class="row mt-3">
                                    <div class="col-2 text-center ms-auto">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-facebook text-white text-lg"></i>
                                        </a>
                                    </div>
                                    <div class="col-2 text-center px-1">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-github text-white text-lg"></i>
                                        </a>
                                    </div>
                                    <div class="col-2 text-center me-auto">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-google text-white text-lg"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="text text-danger mb-4" asp-validation-summary="ModelOnly"></div>
                            <form method="post" class="text-start">
                                <div class="input-group input-group-outline my-3">
                                    <input asp-for="Username" class="form-control" placeholder="Username">
                                    <span style="margin-bottom: 5px; display: inline-block" class="text text-danger" asp-validation-for="Username"></span><br />
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <input asp-for="Password" class="form-control" placeholder="Password">
                                    <span style="margin-bottom: 5px; display: inline-block" class="text text-danger" asp-validation-for="Password"></span><br />
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Sign in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
