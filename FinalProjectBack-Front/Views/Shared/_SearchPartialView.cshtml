@model List<Product>

@foreach (var item in Model)
{
    <div class="serachResult">
        <div class="image">
            <a asp-controller="products" asp-action="details" asp-route-id="@item.Id" asp-route-categoryId="@item.ProductCategories.FirstOrDefault().CategoryId">
                <img src="~/assets/images/@item.ProductImages.FirstOrDefault().Image" alt="">
            </a>
        </div>
        <div class="name-price">
            <div class="name">
                <a asp-controller="products" asp-action="details" asp-route-id="@item.Id" asp-route-categoryId="@item.ProductCategories.FirstOrDefault().CategoryId">@item.Name</a>
            </div>
            <div class="price">
                <span>
                    $ @item.Price
                </span>
            </div>
        </div>
    </div>

}