@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<section id="loginSection">
    <div class="container">
        <div class="row loginRow">
            <div id="loginPage">
                <div class="loginForm">
                    <div class="loginTxt-closeIcon">
                        <span class="loginTxt">LOGIN</span>
                    </div>
                    <div class="loginInputArea">
                        <div class="text text-danger mb-4" asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <label asp-for="@Model.Username">Username <span>*</span></label><br>
                            <input asp-for="@Model.Username" autocomplete="off"><br><br>
                            <span style="margin-bottom: 5px; display: inline-block" class="text text-danger" asp-validation-for="@Model.Username"></span><br />
                            <label asp-for="@Model.Password">Password <span>*</span></label><br>
                            <input asp-for="@Model.Password" autocomplete="off"><br><br>
                            <span style="margin-bottom: 5px; display: inline-block" class="text text-danger" asp-validation-for="@Model.Password"></span><br />
                            <button type="submit">SIGN IN</button>
                        </form>
                    </div>
                    <p class="log-regP">New customer? <a asp-controller="account" asp-action="register" class="goRegister">Create your account</a></p>
                    <p class="log-regP">Forgot password? <a class="goRecoverPassword" asp-controller="account" asp-action="forgotpassword">Recover password</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

