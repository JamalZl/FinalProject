@model ContactVM
@{
    ViewData["Title"] = "Index";
}

<section id="contactEntrance">
    <div class="row contactRow">
        <div class="contactImage-Content">
            <div
                 class="contactImage"><img src="~/assets/images/@Model.Contact.Image" alt=""></div>
            <div class="contactContent">
                <span>Contact Us</span>
            </div>
        </div>
    </div>
</section>
<section id="contactUs">
    <div class="container">
        <div class="row message-infoRow">
            <div class="row messageRow col-lg-6">
                <div class="title">
                    <span>DROP US A LINE</span>
                </div>
                <form asp-controller="contactmsg" asp-action="message" class="contactForm" method="post">
                    <label for="contactName">Your Name (required)</label><br>
                    <input type="text" name="fullname" id="contactName" required><br><br>
                    <label for="contactMail">Your Email (required)</label><br>
                    <input type="email" name="email" id="contactMail" required><br><br>
                    <label for="contactTel">Your Phone Number</label><br>
                    <input type="text" name="number" id="contactTel" required><br><br>
                    <label for="contactTextArea">Your Message</label><br>
                    <textarea name="message" id="contactTextArea" cols="30" rows="10" required></textarea><br><br>
                    <button type="submit" class="contactButton">Send</button>
                </form>
            </div>
            <div class="row contactInfoRow col-lg-6">
                <div class="contactInfoTitle col-lg-3">
                    <p>CONTACT INFORMATION</p>
                </div>
                <div class="contactWrapper col-lg-3">
                    <p class="contactInfoDescription">@Model.Contact.Description</p>
                    <p class="contactInfoAdresss">@Model.Contact.Address</p>
                    <p class="contactInfoMail">@Model.Contact.Email</p>
                    <p class="contactInfoWorkTime">@Model.Contact.WorkingHours</p>
                </div>
            </div>
        </div>
    </div>
</section>

