            <div class="container">
                <div class="row">
                    <div class="getInTouch">
                        <p>GET IN TOUCH</p>
                    </div>
                    <div class="info-links">
                        <div class="info col-lg-3 col-md-6 col-sm-12">
                            <div class="logo">
                                <a href="">
                                    <img src="~/assets/images/@Model.Setting.Logo"
                                         alt="">
                                </a>
                            </div>
                            <div class="location">
                                @Html.Raw(Model.Setting.FooterAdressIcon)
                                <span>@Model.Setting.FooterAddress</span>
                            </div>
                            <div class="mail">
                                @Html.Raw(Model.Setting.FooterEmailIcon)
