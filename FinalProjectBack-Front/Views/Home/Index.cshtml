@model HomeVM
@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/homeowlcarousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/homeowlcarousel/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css" integrity="sha512-vebUliqxrVkBy3gucMhClmyQP9On/HAWQdKDXRaAlb/FKuTbxkjPKUyqVOxAcGwFDka79eTF+YXwfke1h3/wfg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>Home</title>
</head>

<body>

    <header id="homeNavBar" class="homeStickyNav">
        <nav>
            <div class="row">
                <div class="menu animate__animated">
                    <div class="menuTxt-closeIcon">
                        <span class="menuTxt">MENU</span>
                        <span class="closeIcon">@Html.Raw(Model.Setting.CloseIcon)</span>
                    </div>
                    <ul class="menuLinks">
                        <li><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="menuShopLi">
                            <a class="menuShopLiA">Shop</a>
                            <ul class="menuShopUl">
                                @foreach (var item in Model.Brands)
                                {
                    <li><a asp-controller="products" asp-action="getbrands" asp-route-id="@item.Id">@item.Name</a></li>
}
                            </ul>
                        </li>
                        <li class="menuProductsLi">
                            <a class="menuProductsLiA">Products</a>
                            <ul class="menuProductsUl">
                                <li><a asp-controller="products" asp-action="index">All products</a></li>
                                @foreach (var item in Model.Categories)
                                {
                    <li><a asp-controller="products" asp-action="getcategories" asp-route-id="@item.Id">@item.Name</a></li>
}
                            </ul>
                        </li>
                        @foreach (var tag in Model.Tags)
                        {
                    <li><a asp-controller="products" asp-action="gettags" asp-route-id="@tag.Id">@tag.Name</a></li>}
                        <li><a asp-controller="contact" asp-action="index">Contact</a></li>
                        <li>
                            <a href="#" class="searchIcon">
                                @Html.Raw(Model.Setting.SearchIcon)
                                <span>Search</span>
                            </a>
                        </li>
                        <li class="userIconLi">
                            <div class="userIcon">
                                @Html.Raw(Model.Setting.UserIcon)
                                <span>
                                    User
                                </span>
                                <div class="userIconMenuLoginStatus">
                                    <ul class="userIconMenuLoginStatusUl">
                                        <li><a href="">Username</a></li>
                                        <li><a href="">Edit your profile</a></li>
                                        <li><a href="">Logout</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li>
                            <a href="#" class="wishlist">
                                @Html.Raw(Model.Setting.WhishlistIcon)
                                <span>Whishlist</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="basket">
                                @Html.Raw(Model.Setting.BasketIcon)
                                <span>Basket</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="links-logo-icons">
                    <div class="nav-links col-lg-5  col-md-1 col-sm-2 col-xs-4">
                        @Html.Raw(Model.Setting.MenuIcon)
                        <ul class="navLinkElements">
                            <li><a asp-controller="home" asp-action="index">Home</a></li>
                            <li class="shopLi">
                                <a class="shopLiA">Shop</a>
                                <div class="shop">
                                    <ul class="shopElements">
                                        @foreach (var item in Model.Brands)
                                        {
                            <li><a asp-controller="products" asp-action="getbrands" asp-route-id="@item.Id">@item.Name</a></li>
}
                                    </ul>
                                </div>
                            </li>
                            <li class="productsLi">
                                <a class="productsLiA">Products</a>
                                <div class="products">
                                    <ul class="productElements">
                                        <li><a asp-controller="products" asp-action="index">All products</a></li>
                                        @foreach (var item in Model.Categories)
                                        {
                            <li><a asp-controller="products" asp-action="getcategories" asp-route-id="@item.Id">@item.Name</a></li>}
                                    </ul>
                                </div>
                            </li>

                            @foreach (var tag in Model.Tags)
                            {
                                <li><a asp-controller="products" asp-action="gettags" asp-route-id="@tag.Id">@tag.Name</a></li>
                            }
                            <li><a asp-controller="contact" asp-action="index">Contact</a></li>
                        </ul>
                    </div>
                    <div class="logo col-lg-3 col-md-7 col-sm-5 col-xs-12">
                        <a asp-controller="home" asp-action="index">
                            <img src="~/assets/images/@Model.Setting.Logo"
                                 alt="logo">
                        </a>
                    </div>
                    <div class="icons col-lg-4  col-md-4 col-sm-5 col-xs-6">
                        <a class="searchIcon" href="#">
                            @Html.Raw(Model.Setting.SearchIcon)
                        </a>
                        <div class="userIcon" href="#">
                            <i class="bi bi-person nav-user"></i>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="userLoginStatus">
                                    <ul class="userLoginStatusUl">
                                        <li><a href="">@User.Identity.Name</a></li>
                                        <li><a asp-controller="account" asp-action="Edit">Edit your profile</a></li>
                                        <li><a asp-controller="account" asp-action="logout">Logout</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="userLoginStatus">
                                    <ul class="userLoginStatusUl">
                                        <li><a asp-controller="account" asp-action="login">Login</a></li>
                                        <li><a asp-controller="account" asp-action="register">Register</a></li>
                                    </ul>
                                </div>
                            }
                        </div>
                        <a href="#" class="wishlist">
                            @Html.Raw(Model.Setting.WhishlistIcon)
                            <span class="wishlistCount">0</span>
                        </a>
                        <a href="#" class="basket">
                            @Html.Raw(Model.Setting.BasketIcon)
                            <span class="basketCount">0</span>
                        </a>
                    </div>
                </div>
                <div class="searchArea animate__animated">
                    <div class="searchTxt-closeIcon">
                        <span class="searchTxt">SEARCH OUR SITE</span>
                        <span class="searchCloseIcon"><i class="las la-times"></i></span>
                    </div>
                    <div class="searchInputArea">
                        <form method="get">
                            <input class="searchInput" type="search" autocomplete="off" name="keyword" placeholder="Search for product name or brand name" id="product-search">
                        </form>
                    </div>
                    <div class="searchResultArea d-none" id="searchResultsAjax">
                        @await Html.PartialAsync("_SearchPartialView", Model.Products)
                    </div>
                </div>
                <div class="basketArea animate__animated">
                    <div class="basketTxt-closeIcon">
                        <span class="basketTxt">SHOPPING CART</span>
                        <span class="basketCloseIcon"><i class="las la-times"></i></span>
                    </div>
                    <div class="emptyBasket d-none">
                        <div class="emptybasketIcon">
                            <i class="bi bi-cart-x"></i>
                        </div>
                        <p>Your basket is empty</p>
                        <div class="returnBtn">
                            <a class="basketToShopBtn" href="">RETURN TO SHOP</a>
                        </div>
                    </div>
                    <div class="basketProductsArea">
                        <div class="products">
                            <div class="basketProduct">
                                <div class="basketProductImage">
                                    <a href="">
                                        <img src="https://cdn.shopify.com/s/files/1/1385/4931/products/9_b244f435-8ba1-4547-ac06-9d5dd5f0a134_360x.jpg?v=1604999525" alt="">
                                    </a>
                                </div>
                                <div class="basketContent">
                                    <div class="productName">
                                        <a href="">
                                            Nike Joyride Dual Run
                                        </a>
                                    </div>
                                    <span class="productPrice">
                                        $650
                                    </span>
                                    <div class="removeItem">
                                        <i class="bi bi-trash"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="subtotal">
                            <div class="title">
                                <span class="subtotalTitle">Subtotal</span>
                                <span class="subtotalPrice">$650</span>
                            </div>
                            <div class="desc">
                                <p>Taxes, shipping and discounts codes calculated at checkout</p>
                            </div>
                            <div class="checkoutBtn">
                                <a class="mycheckoutBtn" href="">
                                    CHECK OUT
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @if (TempData["Forgot"] != null)
        {
<input type="hidden" id="forgotJS" />}
        @if (TempData["Reset"] != null)
        {
<input type="hidden" id="resetJS" />}
        @if (TempData["Verify"] != null)
        {
<input type="hidden" id="verifyJS" />}


        @if (TempData["Verified"] != null)
        {
<input type="hidden" id="verifiedJS" />}

    <section class="owl-carousel owl-theme myOwl">
        @foreach (var slider in Model.Sliders)
        {
            <div class="image-text">
                <div class="image">
                    <img src="~/assets/images/@slider.Image"
                         alt="image">
                </div>
                <div class="textDiv">
                    <div class="text">
                        <div class="discount">
                            <p>
                                @slider.Description
                            </p>
                        </div>
                        <div class="title">
                            <p>@slider.Title</p>
                        </div>
                        <div class="mybtnDiv">
                            <a class="myButton" href="">
                                START SHOPPING
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
        <section id="handpickedItems">
            <div class="container">
                <div class="row handpickedRow">
                    <div class="itemsTitle">
                        <div class="row bestSellerTitleRow">
                            <div class="title">
                                <div class="itemsText">
                                    <p>Handpicked Items</p>
                                </div>
                                <div class="allproductsText">
                                    <a href="">
                                        VIEW ALL PRODUCTS
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row imagesRow">
                            <div class="row bigImageRow col-lg-6 col-md-12 col-sm-12">
                                <div class="bigImage">
                                    <div class="image">
                                        <img alt="" src="~/assets/images/@Model.Setting.HandpickedImage">
                                    </div>
                                    <div class="content">
                                        <div class="discount">@Model.Setting.HandpickedSale</div>
                                        <div class="saleStatus">@Model.Setting.HandpickedSaleTitle</div>
                                        <a class="goToProducts" href="">SEE PRODUCTS</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row smallImageRow col-lg-6 col-md-12 col-sm-12 justify-content-center">
                                @await Html.PartialAsync("_ProductPartialView", Model.Products)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="newArrival">
            <div class="row">
                <div class="image-content">
                    <div class="image">
                        <a href="">
                            <img alt="" src="~/assets/images/@Model.Setting.NewArrivalImage">
                        </a>
                    </div>
                    <div class="content">
                        <div class="collectionNo">
                            <p>Trending Collection '20</p>
                        </div>
                        <div class="arrivalStatus">
                            <p>NEW ARRIVAL</p>
                        </div>
                        <a class="collection" href="">SEE COLLECTION</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="featuredProducts">
            <div class="container">
                <div class="row">
                    <div class="content-products">
                        <div class="title">
                            <p>Featured Products</p>
                        </div>
                        <div class="seeAllProducts">
                            <a asp-controller="products" asp-action="index">VIEW ALL PRODUCTS</a>
                        </div>
                    </div>
                    <div class="slider">
                        <div class="featured owl-carousel owl-theme">
                            @await Html.PartialAsync("_ProductPartialView", Model.Products)
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="shopBrands">
            <div class="container">
                <div class="row brandTitleRow">
                    <div class="title col-lg-12 col-md-12 col-sm-12">
                        <p>
                            Shop By Brands
                        </p>
                    </div>
                </div>
                <div class="row brandImagesRow">
                    @foreach (var brand in Model.Brands)
                    {
        <div class="brand animate__animated">
            <a href=""><img src="~/assets/images/@brand.Image" alt=""></a>
        </div>}
                </div>
            </div>
        </section>
        <section id="exploreMore">
            <div class="row">
                <div class="image-content">
                    <div class="image"><a href=""><img alt="" src="~/assets/images/@Model.Setting.FunImage"></a></div>
                    <div class="content">
                        <div class="productExplain">
                            <p>No Fun Standing Still</p>
                        </div>
                        <div class="shoeStatus">
                            <p>JUST IN SHOES</p>
                        </div>
                        <a class="exploreMore" href="">EXPLORE MORE</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="bestSeller">
            <div class="container">
                <div class="row bestSellerRow">
                    <div class="itemsTitle">
                        <div class="row bestSellerTitleRow">
                            <div class="title">
                                <div class="itemsText">
                                    <p>Best Seller Items</p>
                                </div>
                                <div class="allproductsText">
                                    <a href="">
                                        VIEW ALL PRODUCTS
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row imagesRow">
                            <div class="row smallImageRow col-lg-6 col-md-12 col-sm-12">
                                @await Html.PartialAsync("_ProductPartialView", Model.Products)
                            </div>
                            <div class="row bigImageRow col-lg-6 col-md-12 col-sm-12">
                                <div class="bigImage">
                                    <div class="image">
                                        <img alt="" src="~/assets/images/@Model.Setting.UpliftedImage">
                                    </div>
                                    <div class="content">
                                        <div class="discount">Lighter, Bouncier, Asic</div>
                                        <div class="saleStatus">UPLIFTED</div>
                                        <a class="goToProducts" href="">DISCOVER ITEMS</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="subscribe">
            <div class="row">
                <div class="image-content">
                    <div class="image"><img alt="" src="~/assets/images/@Model.Setting.SubscribeImage"></div>
                    <div class="content">
                        <div class="text">
                            <p>
                                @Html.Raw(Model.Setting.SubscribeTitle)
                            </p>
                        </div>
                        <form class="form" action="">
                            <input type="email" placeholder="Your email address" required>
                            <button class="myBtn" type="submit">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
