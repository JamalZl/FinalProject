                {
                    @Model.ProductByBrands.Where(p => p.Brand.Name == Model.ProductByBrands.FirstOrDefault().Brand.Name).FirstOrDefault().Brand.Name
                    <span>
                        (@Model.ProductByBrands.Count)
                    </span>

                }
            </div>
        </div>
    </div>
</section>
@if (Model.ProductByBrands.Count == 0)
{

}
else
{
}
@if (Model.ProductByBrands.Count == 0)
{
    <div class="row justify-content-center align-items-center" style="height:214px;">
        <p style="display: inline-block; text-align:center; color: rgb(203,3,29);">
            <span style="font-size:20px;font-weight:bold;">
                NOT FOUND
            </span>
        </p>
    </div>
}
else
{
    <section id="products">
        <div class="container">
            <div class="d-flex justify-content-center">
                <img src="~/assets/images/@Model.ProductByBrands.Where(p => p.Brand.Image == Model.ProductByBrands.FirstOrDefault().Brand.Image).FirstOrDefault().Brand.Image" alt="brand image" />
            </div>
            <div class="row">

                @await Html.PartialAsync("_ProductPartialView", Model.ProductByBrands)
            </div>
        </div>
    </section>
}


